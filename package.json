{
  "name": "ts-result-monad",
  "version": "1.0.0",
  "description": "A lightweight, zero-dependency TypeScript implementation of the Result monad pattern for elegant error handling without exceptions.",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./validation": {
      "import": "./dist/esm/validation.js",
      "require": "./dist/cjs/validation.cjs",
      "types": "./dist/types/validation.d.ts"
    },
    "./integrations/*": {
      "import": "./dist/esm/integrations/*.js",
      "require": "./dist/cjs/integrations/*.cjs",
      "types": "./dist/types/integrations/*.d.ts"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "preinstall": "node .scripts/preinstall.js",
    "dev": "vite",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "lint:all": "biome check --apply-unsafe . && biome format --write .",
    "clean": "rimraf dist",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "ci": "pnpm run lint && pnpm run test:coverage && pnpm run build",
    "docs": "typedoc --options typedoc.json",
    "build:types": "tsc -p tsconfig.declarations.json",
    "build:js": "rollup -c"
  },
  "keywords": ["typescript", "monad", "result", "error-handling", "functional-programming"],
  "author": "szymdzum",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.10",
    "rollup": "^4.37.0",
    "terser": "^5.39.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "^4.6.0",
    "typescript": "^5.8.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szymdzum/ts-result-monad.git"
  },
  "bugs": {
    "url": "https://github.com/szymdzum/ts-result-monad/issues"
  },
  "homepage": "https://github.com/szymdzum/ts-result-monad#readme",
  "lint-staged": {
    "*.{js,ts}": ["biome check --apply", "biome format --write"]
  },
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  }
}
